{{#each posts as |post| }}
<div>
    <div>
        <h2>
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div>
        <p>
            {{post.content}}
        </p>
        <button>Update</button></a>
        <button>Delete</button>
    </div>
</div>

